<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.shape.Box?>
<?import javafx.scene.image.ImageView?>
<GridPane fx:controller="sample.login.LoginController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <ImageView fitHeight="200.0" fitWidth="200.0"
               fx:id="imageView"
               GridPane.halignment="CENTER"
               GridPane.rowIndex="0"/>

    <Label text="Login" id="titleLabel" GridPane.rowIndex="1"
           GridPane.halignment="CENTER"/>
    <Label text="Print file download tool for supplier" id="subTitleLabel" GridPane.rowIndex="2"
           GridPane.halignment="CENTER"/>

    <Label text="Email" id="label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="txtEmail" GridPane.rowIndex="4" GridPane.columnSpan="2"/>

    <Label text="Password" id="label" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <PasswordField fx:id="txtPassword" GridPane.rowIndex="6" GridPane.columnSpan="2"/>

    <Box id="spacing" GridPane.rowIndex="7"/>

    <Button onAction="#handleButtonLogin" maxWidth="1.7976931348623157E308" id="btn" text="Login" GridPane.rowIndex="8"
            GridPane.columnSpan="2"/>

    <stylesheets>
        <URL value="@login.css"/>
    </stylesheets>
</GridPane>